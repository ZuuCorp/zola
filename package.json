{
  "name": "zola-site-vitrine",
  "version": "1.0.0",
  "description": "Site vitrine interactif pour l'artiste ZOLA avec style GTA 4 et univers rap",
  "main": "js/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:prod": "vite build --mode production",
    "preview": "vite preview",
    "lint": "eslint js/**/*.js",
    "lint:fix": "eslint js/**/*.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "serve": "python -m http.server 8000",
    "deploy": "gh-pages -d dist",
    "analyze": "vite-bundle-analyzer",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky install",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist node_modules/.cache",
    "prebuild": "npm run clean",
    "postbuild": "npm run analyze"
  },
  "keywords": [
    "zola",
    "rap",
    "musique",
    "timeline",
    "interactive",
    "gta4",
    "site-vitrine",
    "artiste",
    "pwa",
    "performance",
    "accessibility"
  ],
  "author": "ZOLA",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/zola-site.git"
  },
  "homepage": "https://username.github.io/zola-site",
  "devDependencies": {
    "vite": "^4.4.0",
    "vite-plugin-pwa": "^0.16.0",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-html": "^3.2.0",
    "vite-plugin-legacy": "^4.1.1",
    "vite-bundle-analyzer": "^0.7.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "prettier": "^3.0.0",
    "postcss": "^8.4.27",
    "autoprefixer": "^10.4.14",
    "cssnano": "^6.0.1",
    "postcss-preset-env": "^9.1.0",
    "gh-pages": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "rimraf": "^5.0.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lighthouse": "^11.2.0",
    "typescript": "^5.1.6",
    "@types/node": "^20.4.5"
  },
  "dependencies": {
    "workbox-window": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11",
    "not op_mini all"
  ],
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "prettier --write"
    ],
    "*.html": [
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
